@page "/BookMyShow/List"
@{
    Layout = "BMSLayout";
}
@model ListModel
@{
    ViewData["Title"] = "List of Movies";
}

<head>
    <style>
        table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        }

        td,
        th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        }

        tr:nth-child(even) {
        background-color: #dddddd;
        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>Movie</th>
            <th>Synopsis</th>
            <th>Release Year</th>
        </tr>
        @for (int i = 0; i < Model.MovieList.Count; i++)
        {
            <tr>
            <td>@Model.MovieList[i].MovieName</td>
            <td>@Model.MovieList[i].Synopsis</td>
            <td>@Model.MovieList[i].Year</td>
        </tr>
        }
    </table>
</body>