@page "/ToDoList"
@model ToDoIndexModel
@{
    ViewData["Title"]="To Do List App";
}
<div class="text-center">
    <h1 class="display-4">To Do List App</h1>
    <form method="POST">
        <input type="text" id="newtask"name="newtask" placeholder="Enter new task" required>
        <input type="submit" value="Submit"><br>
        @{
            string[] ToDoList=Model.Todolist;
            for (int i = 0; i < ToDoList.Length; i++)
            {
                <label>@ToDoList[i]</label> <br>
            }
        }
    </form>
</div>